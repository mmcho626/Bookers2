<!-- attachment いる？ -->
<!-- attachment_image_tagはrefileで用意されている<img>タグを作成してくれるヘルパーです。bookモデルの中のimage_idから保存された画像のimgタグを生成します。 -->





<%= render partial: 'share/sidebar',locals: { book: @book, user: @user } %>



 <div class="col-xs-9">






<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |t| %>
        <li><%= t %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
        </tr>
    </thead>

    <tbody>

     <% @books.each do |t| %>

 <tr>

            <td><%= attachment_image_tag t.user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>


            <td><%=t.title %></td>
            <td><%=t.body %></td>
            <td><%= link_to "show",book_path(t) %></td>

            </th>

        </tr>


        <% end %>

    </tbody>
</table>

</div>

