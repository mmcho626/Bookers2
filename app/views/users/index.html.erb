<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>




<table>
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>

     <% @users.each do |t| %>

 <tr>

            <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>


            <td><%=t.name %></td>
            <td><%= link_to "show",user_path(t) %></td>

            </th>

        </tr>


        <% end %>

    </tbody>
</table>
